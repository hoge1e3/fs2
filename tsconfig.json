{
    "compilerOptions": {
      // ソースマップを有効化
      "sourceMap": true,
      // TSはECMAScript 5に変換
      "target": "ES2021",
      "lib": ["es2021"/*,"dom"*/],
      // TSのモジュールはES Modulesとして出力
      "module": "esnext",
      //"allowImportingTsExtensions": true,
      //"noEmit": true,
      "moduleResolution": "node",
      // 厳密モードとして設定
      "declaration": true,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      //"outDir":"./js"
      
      "incremental": true,
      "tsBuildInfoFile": "./.tsbuildinfo",
    },
    "include": ["src","test"],
  }